# Investment Analysis System Environment Variables
# Copy this file to .env and update with your actual values

# API Keys (Replace with your actual API keys)
ALPHA_VANTAGE_API_KEY=demo
NEWSAPI_API_KEY=your_newsapi_key_here
FINNHUB_API_KEY=your_finnhub_key_here
TWELVEDATA_API_KEY=your_twelvedata_key_here
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_secret_here

# Email Configuration for Alerts
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_RECIPIENT=your_email@gmail.com

# Portfolio Configuration
PORTFOLIO_BALANCE=900
RISK_TOLERANCE=medium
PORTFOLIO_CURRENCY=USD

# Alert Thresholds
PRICE_MOVEMENT_ALERT=0.05
VOLUME_SPIKE_THRESHOLD=2.0
STRONG_BUY_CONFIDENCE=0.8
CONTRACT_VALUE_ALERT=50000000

# Data Storage
CACHE_ENABLED=true
CACHE_EXPIRY_HOURS=24
REPORTS_RETENTION_DAYS=30

# System Configuration
LOG_LEVEL=INFO
ANALYSIS_TIMEOUT=300
MONITORING_INTERVAL=15

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false

# Database (if implementing persistence)
# DATABASE_URL=sqlite:///investment_analysis.db

# Third-party Services
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url