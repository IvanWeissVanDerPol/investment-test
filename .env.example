# InvestmentAI Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/investmentai
SQLITE_DB_PATH=core/database/investment_system.db

# API Keys - Market Data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
TWELVEDATA_API_KEY=your_twelvedata_key_here
POLYGON_API_KEY=your_polygon_key_here
FINNHUB_API_KEY=your_finnhub_key_here
NEWSAPI_KEY=your_newsapi_key_here

# Interactive Brokers Configuration
IB_HOST=127.0.0.1
IB_TWS_PORT=7497
IB_GATEWAY_PORT=4001
IB_CLIENT_ID=1

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Claude AI API
CLAUDE_API_KEY=your_claude_api_key_here

# Security Configuration
SECRET_KEY=your_flask_secret_key_here_make_it_long_and_random
ENCRYPTION_KEY=your_encryption_key_here_32_bytes_base64_encoded
JWT_SECRET_KEY=your_jwt_secret_key_here

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_RECIPIENT=your_email@gmail.com

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
ENABLE_HTTPS=false

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Portfolio Configuration
DEFAULT_PORTFOLIO_BALANCE=900.00
DEFAULT_RISK_TOLERANCE=medium
DEFAULT_MAX_POSITION_PERCENT=15.0